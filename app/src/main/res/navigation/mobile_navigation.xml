<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_tinder">

    <fragment
        android:id="@+id/navigation_news"
        android:name="com.example.putinder.ui.news.NewsFragment"
        android:label="NEWS"
        tools:layout="@layout/fragment_news" />

    <fragment
        android:id="@+id/navigation_tinder"
        android:name="com.example.putinder.ui.tinder.TinderFragment"
        android:label="TINDER"
        tools:layout="@layout/fragment_tinder" />
    <fragment
        android:id="@+id/navigation_favorite"
        android:name="com.example.putinder.ui.favorite.FavoriteFragment"
        android:label="FAVORITE"
        tools:layout="@layout/fragment_favorite" />
    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.putinder.ui.profile.ProfileFragment"
        android:label="PROFILE"
        tools:layout="@layout/fragment_profile" />
</navigation>